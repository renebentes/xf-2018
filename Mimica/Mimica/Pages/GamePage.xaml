<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Mimica.Pages.GamePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <StackLayout>
        <Label Text="Jogador" />
        <Frame
            BorderColor="Black"
            HasShadow="False">
            <StackLayout>
                <Label
                    HorizontalOptions="CenterAndExpand"
                    Text="Palavra - Pontuação x" />
                <Label
                    FontSize="30"
                    HorizontalOptions="CenterAndExpand"
                    Text="**********" />
                <Button
                    HorizontalOptions="CenterAndExpand"
                    Text="Mostrar" />
            </StackLayout>
        </Frame>

        <Label
            FontSize="100"
            HorizontalOptions="CenterAndExpand"
            Text="200" />
        <Label
            HorizontalOptions="CenterAndExpand"
            Text="seg" />

        <StackLayout Orientation="Horizontal">
            <Button
                BackgroundColor="LightGreen"
                Text="Acertou" />
            <Button
                BackgroundColor="OrangeRed"
                Text="Errou" />
        </StackLayout>

        <Button Text="Iniciar" />
    </StackLayout>
</ContentPage>
