<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Mimica.Pages.ScorePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <StackLayout>
        <Label Text="Jogador 1" />

        <Frame
            BorderColor="Black"
            HasShadow="False">
            <Label
                FontSize="50"
                Text="30 pontos" />
        </Frame>

        <Label Text="Jogador 2" />

        <Frame
            BorderColor="Black"
            HasShadow="False">
            <Label
                FontSize="50"
                Text="20 pontos" />
        </Frame>

        <Button
            BackgroundColor="CornflowerBlue"
            Text="Jogar outra vez" />
    </StackLayout>
</ContentPage>
