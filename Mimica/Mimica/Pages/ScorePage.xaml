<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Mimica.Pages.ScorePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:Mimica.ViewModels"
    x:DataType="viewModels:ScoreViewModel">
    <StackLayout>
        <Label Text="{Binding Game.PlayerOne.Name}" />

        <Frame
            BorderColor="Black"
            HasShadow="False">
            <Label
                FontSize="50"
                Text="{Binding Game.PlayerOne.Score, StringFormat='Nome: {0}'}" />
        </Frame>

        <Label Text="{Binding Game.PlayerTwo.Name, StringFormat='Nome: {0}'}" />

        <Frame
            BorderColor="Black"
            HasShadow="False">
            <Label
                FontSize="50"
                Text="{Binding Game.PlayerOne.Score}" />
        </Frame>

        <Button
            BackgroundColor="CornflowerBlue"
            Command="{Binding RestartCommand}"
            Text="Jogar outra vez" />
    </StackLayout>
</ContentPage>
