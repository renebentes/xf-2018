<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="Tarefas.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Application.Resources>
        <Color x:Key="VeryHighPriorityColor">#ff1a2b</Color>
        <Color x:Key="HighPriorityColor">#ff8220</Color>
        <Color x:Key="MediumPriorityColor">#ffd200</Color>
        <Color x:Key="LowPriorityColor">#3daa00</Color>
        <Color x:Key="BlueColor">#0030b8</Color>
        <Style
            x:Key="Priority"
            TargetType="BoxView">
            <Setter Property="Margin" Value="0,0,5,0" />
            <Setter Property="CornerRadius" Value="50" />
            <Setter Property="HeightRequest" Value="10" />
            <Setter Property="WidthRequest" Value="10" />
        </Style>
    </Application.Resources>
</Application>
