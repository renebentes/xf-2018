<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamControle.Pages.DatePickerPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <StackLayout>
        <DatePicker
            Date="01/01/2017"
            DateSelected="OnDateSelected"
            Format="dd/MM/yyyy"
            MaximumDate="01/01/2018"
            MinimumDate="01/01/2000"
            TextColor="Red" />

        <Label x:Name="Resultado" />
    </StackLayout>
</ContentPage>
