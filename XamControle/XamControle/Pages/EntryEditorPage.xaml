<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamControle.Pages.EntryEditorPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <StackLayout>
        <Entry
            x:Name="Idade"
            BackgroundColor="#CCC"
            Keyboard="Numeric"
            Placeholder="Digite sua idade"
            PlaceholderColor="Blue"
            TextColor="Red" />
        <Label x:Name="Duplicado" />

        <Editor
            x:Name="Comentario"
            HeightRequest="200" />
        <Label x:Name="QuantidadeCaracteres" />
    </StackLayout>
</ContentPage>
