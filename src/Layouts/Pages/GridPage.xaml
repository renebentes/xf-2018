<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Layouts.Pages.GridPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid
        ColumnDefinitions="150, Auto, *"
        RowDefinitions="100, 100, 100, 100">
        <BoxView
            Grid.Row="0"
            Grid.Column="0"
            BackgroundColor="Red"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand" />

        <BoxView
            Grid.Row="0"
            Grid.Column="2"
            BackgroundColor="Blue"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand" />

        <BoxView
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            BackgroundColor="Yellow"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand" />

        <BoxView
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="0"
            BackgroundColor="Red"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand" />
    </Grid>
</ContentPage>
